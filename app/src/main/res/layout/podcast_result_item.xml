<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_podcast_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/default_gutter"
    android:layout_marginTop="@dimen/default_gutter"
    android:layout_marginRight="@dimen/default_gutter"
    android:layout_marginBottom="@dimen/small_gutter"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="3dp"
    android:elevation="0dp"
    android:background="@drawable/ripple">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_podcast_item"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_grade_24px"
            android:scaleType="fitStart"
            android:contentDescription="@null"
            android:adjustViewBounds="true"/>


        <TextView
            android:id="@+id/tv_podcast_item_name"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            tools:text="@string/following"
            android:paddingStart="@dimen/default_gutter"
            android:paddingEnd="@dimen/default_gutter"/>

        <TextView
            android:id="@+id/tv_podcast_item_publisher"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            tools:text="@string/downloaded"
            android:paddingStart="@dimen/default_gutter"
            android:paddingEnd="@dimen/default_gutter"
            android:paddingBottom="@dimen/small_gutter"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>





