<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <TextView android:id="@+id/tv_search_result_shows"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/default_gutter"
              android:layout_marginStart="@dimen/default_gutter"
              style="@style/TextAppearance.Podcast.SearchResult.Headline5"
              android:text="@string/shows"
              android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_podcast_result_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/small_gutter"
        android:background="@color/primaryColor"/>
</LinearLayout>